<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HistoryFragment">

    <fragment
        android:id="@+id/HistoryFragment"
        android:name="com.example.aramoolah.ui.fragment.history.HistoryFragment"
        android:label="@string/bookkeeping_history_fragment_label"
        tools:layout="@layout/fragment_history">

        <action
            android:id="@+id/action_HistoryFragment_to_AddTransactionFragment"
            app:destination="@id/AddTransactionFragment" />
    </fragment>
    <fragment
        android:id="@+id/AddTransactionFragment"
        android:name="com.example.aramoolah.ui.fragment.addtransaction.AddTransactionFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_add_transaction">

        <action
            android:id="@+id/action_BookkeepingAddTransactionFragment_to_BookkeepingHistoryFragment"
            app:destination="@id/HistoryFragment" />
    </fragment>

</navigation>